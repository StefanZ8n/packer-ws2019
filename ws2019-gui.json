{
  "variables": {
    "boot_wait": "5s",
    "disk_size": "40960",    
    "iso_checksum": "sha256:DBB0FFBAB5D114CE7370784C4E24740191FEFDB3349917C77A53FF953DD10F72",
    "iso_url": "https://software-download.microsoft.com/download/pr/17763.1.180914-1434.rs5_release_SERVER_EVAL_X64FRE_EN-US.ISO",
    "memsize": "2048",
    "numvcpus": "2",
    "vm_name": "WS2019_Template",
    "winrm_password": "Passw0rd.",
    "winrm_username": "Administrator",
    "esx_host": "buildesx1.lan.afno.de",
    "esx_user": "root",
    "esx_password": "Passw0rd."
  },
  "builders": [
    {
      "type": "vmware-iso",
      "remote_type": "esx5",
      "remote_host": "{{user `esx_host`}}",
      "remote_username": "{{user `esx_user`}}",
      "remote_password": "{{user `esx_password`}}",
      "format": "ova",
      "disable_vnc": true,
      "vnc_disable_password": true,
      "http_directory": "http",      
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "vm_name": "{{user `vm_name`}}",
      "version": 14,
      "guest_os_type": "windows9srv-64",
      "cpus": 2,
      "memory": 2048,
      "disk_adapter_type": "pvscsi",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "network_adapter_type": "vmxnet3",
      "network": "bridged",
      "tools_upload_flavor": "windows",
      "vmx_data": {
        "ethernet0.networkName": "VM Network"
      },
      "boot_wait": "{{user `boot_wait`}}",
      "floppy_files": [
        "scripts/gui/autounattend.xml",
        "resources/drivers/pvscsi",
        "resources/drivers/vmxnet3",
        "scripts/gui/sysprep-autounattend.xml"    
      ],
      "communicator": "winrm",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "4h",
      "shutdown_command": "C:\\Windows\\system32\\Sysprep\\sysprep.exe /quiet /generalize /oobe /shutdown /unattend:A:\\sysprep-autounattend.xml",
      "shutdown_timeout": "60m"
    }
  ],
  "provisioners": [
    {
      "pause_before": "3m",
      "type": "powershell",
      "scripts": [
        "scripts/install-vmware-tools-from-iso.ps1"
      ]
    },
    {      
      "type": "windows-restart",
      "restart_timeout": "30m"
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/win-update.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "30m"
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/win-update.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "30m"
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/adjustments.ps1"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/cleanup.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "30m"
    }
  ]
}